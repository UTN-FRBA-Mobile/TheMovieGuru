<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


<android.support.v7.widget.CardView
        android:id="@+id/peliContainer"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

                <ImageView
                    android:id="@+id/actor_movie_poster"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxHeight="513px"
                    android:adjustViewBounds="true"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"/>
                <TextView
                    android:id="@+id/actor_movie_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:layout_alignStart="@+id/actor_movie_poster"
                    android:layout_alignEnd="@+id/actor_movie_poster"
                    android:layout_below="@+id/actor_movie_poster"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>