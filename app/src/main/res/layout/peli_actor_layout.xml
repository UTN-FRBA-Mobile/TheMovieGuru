<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/actorContainer"
        android:layout_width="342px"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="513px"
                android:id="@+id/movie_actor_image"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/movie_actor_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/movie_actor_image"/>
            <TextView
                android:id="@+id/movie_actor_character"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:textAlignment="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/movie_actor_name"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>